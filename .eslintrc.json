{
  "env": { "commonjs": true, "es2021": true, "node": true, "jest": true },
  "extends": "eslint:recommended",
  "overrides": [],
  "ignorePatterns": ["node_modules/", "db/"],
  "parserOptions": { "ecmaVersion": "latest" },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
